{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v2/schema.json",
  "productName": "Peeksta",
  "version": "0.1.0",
  "identifier": "com.ireddragonicy.peeksta",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run tauri:export",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Peeksta",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app", "nsis", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}


